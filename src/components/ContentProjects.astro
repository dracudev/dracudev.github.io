---
interface Project {
  name: string;
  description: string;
  link: {
    urlRepo?: string;
    urlLive?: string;
    target?: string;
    title?: string;
    buttonLabel?: string;
  };
}

const projects: Project[] = [
  {
    name: "El Gavil√°n - Ecommerce",
    description:
      "E-commerce platform for a traditional hat store using Next.js, React, TypeScript, and Tailwind CSS. Implemented a secure checkout with Stripe, a user authentication with Supabase, and an admin panel.",
    link: {
      urlRepo: "https://github.com/dracudev/gavilan-shop",
      urlLive: "https://gavilan-shop.vercel.app/",
    },
  },
  {
    name: "Bel'Pom - Corporate Website",
    description:
      "Corporate website for Bel'pom using Astro.js, React, TypeScript, and Tailwind CSS. Implementation of a modern, responsive interface to present company, product, and service information.",
    link: {
      urlRepo: "https://github.com/dracudev/belpom-web",
      urlLive: "https://belpom-wep.vercel.app/",
    },
  },
  {
    name: "Regame - Trading Platform",
    description:
      "Video game trading platform with a Node.js API and MySQL database, featuring a React front end with a trade map, calendar with events, and charts to track exchanges and game popularity.",
    link: {
      urlRepo: "https://github.com/dracudev/regame-app",
      urlLive: "dracudev-regame.vercel.app/",
    },
  },
  {
    name: "Star Wars Guide - Consumed API",
    description:
      "Star Wars visual guide using the SWAPI API with React, TypeScript, and Tailwind CSS. Implemented pagination, user authentication, protected routes, and a detailed view of characters, films, and starships.",
    link: {
      urlRepo: "https://github.com/dracudev/star-wars-app",
      urlLive: "https://dracudev-star-wars.vercel.app/",
    },
  },
  {
    name: "Budget App - Projects Pricing",
    description:
      "Budget app to calculate project pricing using React, JavaScript, and Bootstrap. Implemented a form to add projects, calculate prices, and display a list of projects with their total cost.",
    link: {
      urlRepo: "https://github.com/dracudev/budget-app",
      urlLive: "https://dracudev-budget.vercel.app/",
    },
  },
];
---

<div>
  <!-- <h2 class="text-2xl font-bold text-white mb-4">Latest Projects</h2> -->

  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
    {
      projects.map((project) => (
        <div class="flex flex-col justify-center items-start border border-gray-700 rounded-lg p-4 bg-black">
          <h3 class="text-xl font-semibold text-white mb-2">{project.name}</h3>

          <p class="text-gray-400">{project.description}</p>

          <div class="flex flex-col md:flex-row md:justify-between md:items-center w-full md:gap-4">
            {project.link?.urlRepo ? (
              <a
                href={project.link.urlRepo}
                title={project.link.title || project.name}
                target={project.link.target || "_blank"}
                class="
                                w-full px-4 py-2.5 mt-4 text-center

                                border border-gray-600 rounded-lg

                                hover:text-primary
                                hover:border-primary
                            "
              >
                {project.link.buttonLabel || "Repository"}
              </a>
            ) : null}

            {project.link?.urlLive ? (
              <a
                href={project.link.urlLive}
                title={project.link.title || project.name}
                target={project.link.target || "_blank"}
                class="
                                w-full px-4 py-2.5 mt-4 text-center

                                border border-gray-600 rounded-lg

                                hover:text-primary
                                hover:border-primary
                            "
              >
                {project.link.buttonLabel || "Live Demo"}
              </a>
            ) : null}
          </div>
        </div>
      ))
    }
  </div>
</div>
