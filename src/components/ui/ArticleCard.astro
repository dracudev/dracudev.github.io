---
interface Props {
  title: string;
  description?: string;
  url: string;
  tags?: string[];
  image?: string | null;
}

const { title, description, url, tags, image } = Astro.props;
---

<article>
  <div class="article-content">
    {image && (
      <a href={url} target="_blank" class="thumbnail">
        <img 
          src={image} 
          alt={`${title} thumbnail`} 
          loading="lazy" 
        />
      </a>
    )}
    <div class="content">
      <div class="title-row">
        <a href={url} target="_blank">{title}</a>
      </div>
      <p class="muted-text">{description}</p>
      {
        tags && (
          <div class="tags">
            {tags.map((tag) => (
              <span>{tag}</span>
            ))}
          </div>
        )
      }
    </div>
  </div>
</article>

<style>
  .article-content {
    display: flex;
    gap: 1rem;
    align-items: stretch;
  }

  .thumbnail {
    flex-shrink: 0;
    width: 120px;
    border-radius: 0.35rem;
    overflow: hidden;
    background: var(--muted-bg);
    display: flex;
    text-decoration: none;
    align-self: stretch;
    min-height: 120px;
    position: relative;
    transition: all var(--transition-base);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }

  .thumbnail::before {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(
      135deg,
      var(--glow-color) 0%,
      transparent 50%
    );
    opacity: 0;
    transition: opacity var(--transition-base);
    z-index: 1;
    pointer-events: none;
  }

  .thumbnail img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 0.35rem;
    transition: all var(--transition-base);
    position: relative;
    z-index: 0;
  }

  @media (prefers-reduced-motion: no-preference) {
    .thumbnail:hover {
      cursor: pointer;
      transform: translateY(-2px) scale(1.02);
      box-shadow: 0 8px 25px rgba(0, 0, 0, 0.2);
    }

    .thumbnail:hover::before {
      opacity: 0.15;
    }

    .thumbnail:hover img {
      transform: scale(1.05);
      filter: brightness(1.1) saturate(1.1);
    }

    .thumbnail:active {
      transform: translateY(-1px) scale(1.01);
    }
  }

  .content {
    flex: 1;
    min-width: 0; /* Allows text to truncate properly */
  }

  .title-row {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    gap: 1rem;
  }

  .title-row a {
    font-size: var(--text-lg);
    text-decoration: none;
    color: var(--text-color);
  }

  .title-row a:hover {
    color: var(--link-color);
  }

  .tags {
    display: flex;
    gap: 0.75rem;
    margin-top: 0.5rem;
    flex-wrap: wrap;
  }

  .tags span {
    font-size: var(--text-xs);
    opacity: 0.5;
  }

  /* For articles without thumbnails, maintain original layout */
  .article-content:not(:has(.thumbnail)) .content {
    width: 100%;
  }

  /* Responsive design */
  @media (max-width: 768px) {
    article {
      margin-bottom: 2rem;
    }
    
    .article-content {
      flex-direction: column;
      gap: 1rem;
    }
    
    .thumbnail {
      width: 100%;
      height: 200px;
      min-height: 200px;
      align-self: center;
      margin: 0 auto;
    }

    @media (prefers-reduced-motion: no-preference) {
      .thumbnail:hover {
        transform: translateY(-3px) scale(1.01);
      }

      .thumbnail:hover img {
        transform: scale(1.03);
      }
    }
  }

  @media (max-width: 480px) {
    article {
      margin-bottom: 1.5rem;
    }
    
    .article-content {
      gap: 0.75rem;
    }
    
    .thumbnail {
      height: 180px;
      min-height: 180px;
    }
  }
</style>
